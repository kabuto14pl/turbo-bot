{
  "name": "turbo-bot-deva-enterprise",
  "version": "2.0.0",
  "description": "Enterprise-grade cryptocurrency trading bot with VaR integration and environment separation",
  "main": "main.ts",
  "scripts": {
    "start": "ts-node main.ts",
    "backtest": "ts-node main.ts --mode=backtest --config=backtest.default",
    "backtest:quick": "ts-node main.ts --mode=backtest --config=backtest.quick",
    "backtest:comprehensive": "ts-node main.ts --mode=backtest --config=backtest.comprehensive",
    "demo": "ts-node main.ts --mode=demo --config=demo.default",
    "demo:conservative": "ts-node main.ts --mode=demo --config=demo.conservative", 
    "demo:aggressive": "ts-node main.ts --mode=demo --config=demo.aggressive",
    "production:minimal": "ts-node main.ts --mode=production --config=production.minimal --env=production",
    "production:default": "ts-node main.ts --mode=production --config=production.default --env=production",
    "production:high-performance": "ts-node main.ts --mode=production --config=production.high_performance --env=production",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":90,\"functions\":90,\"lines\":90,\"statements\":90}}'",
    "test:environment": "ts-node -e \"require('./tests/integration/environment.integration.test').runManualIntegrationTest()\"",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "dev": "ts-node-dev --respawn --transpile-only main.ts --mode=demo --config=demo.default",
    "validate:config": "ts-node -e \"require('./config').enterpriseConfig.validateSystemConfiguration().forEach(console.error)\"",
    "validate:environment": "ts-node -e \"require('./core/environment/environment.parser').parseEnvironmentAndValidate()\"",
    "setup:beginner": "ts-node -e \"require('./config').setupBeginnerConfiguration()\"",
    "setup:experienced": "ts-node -e \"require('./config').setupExperiencedTraderConfiguration()\"",
    "setup:professional": "ts-node -e \"require('./config').setupProfessionalConfiguration()\"",
    "setup:research": "ts-node -e \"require('./config').setupResearchConfiguration()\"",
    "metrics:export": "ts-node scripts/export-metrics.ts",
    "risk:report": "ts-node scripts/generate-risk-report.ts",
    "git:validate": "conventional-changelog-lint",
    "git:commit": "git-cz",
    "docker:build": "docker build -t turbo-bot-deva:latest .",
    "docker:run:backtest": "docker run --rm -e MODE=backtest turbo-bot-deva:latest",
    "docker:run:demo": "docker run --rm -e MODE=demo turbo-bot-deva:latest",
    "docker:run:production": "docker run --rm -e MODE=production -e ENABLE_REAL_TRADING=true turbo-bot-deva:latest"
  },
  "keywords": [
    "trading-bot",
    "cryptocurrency",
    "enterprise",
    "var",
    "risk-management",
    "typescript",
    "okx",
    "backtesting"
  ],
  "author": "Enterprise Trading Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.13.0",
    "axios": "^1.4.0",
    "node-cron": "^3.0.2",
    "winston": "^3.9.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "kafkajs": "^2.2.4",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.1.4",
    "commander": "^11.0.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "prom-client": "^14.2.0",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "@types/lodash": "^4.14.195",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jest": "^29.5.2",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.43.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "conventional-changelog-cli": "^3.0.0",
    "conventional-changelog-lint": "^2.1.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": ["@typescript-eslint"],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:unit && npm run validate:environment"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enterprise-trading/turbo-bot-deva.git"
  },
  "bugs": {
    "url": "https://github.com/enterprise-trading/turbo-bot-deva/issues"
  },
  "homepage": "https://github.com/enterprise-trading/turbo-bot-deva#readme"
}
