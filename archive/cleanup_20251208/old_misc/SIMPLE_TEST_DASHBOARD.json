{
  "dashboard": {
    "id": null,
    "title": "üöÄ Simple Bot Test Dashboard",
    "tags": ["trading", "bot"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "üí∞ Portfolio Value",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_bot_portfolio_value",
            "legendFormat": "Portfolio Value"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "ü§ñ Bot Status",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_bot_status",
            "legendFormat": "Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "OFFLINE"}, "1": {"text": "ONLINE"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "üéØ Win Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "trading_bot_win_rate",
            "legendFormat": "Win Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "‚è±Ô∏è Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_bot_uptime",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {"from": "now-5m", "to": "now"},
    "refresh": "5s"
  }
}
