{
  "//": "ðŸš€ TIER 2.2: Grafana Dashboard Configuration - Enterprise Trading Bot Monitoring",
  "dashboard": {
    "title": "Autonomous Trading Bot - Enterprise Dashboard",
    "tags": ["trading", "crypto", "autonomous", "risk-management"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    
    "panels": [
      {
        "id": 1,
        "title": "Portfolio Value (Real-time)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "trading_bot_portfolio_total_value",
            "legendFormat": "Total Value",
            "refId": "A"
          },
          {
            "expr": "trading_bot_portfolio_unrealized_pnl",
            "legendFormat": "Unrealized PnL",
            "refId": "B"
          },
          {
            "expr": "trading_bot_portfolio_realized_pnl",
            "legendFormat": "Realized PnL",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "currencyUSD", "label": "Value" },
          { "format": "short" }
        ],
        "tooltip": { "shared": true, "sort": 0, "value_type": "individual" }
      },
      
      {
        "id": 2,
        "title": "Strategy Performance Comparison",
        "type": "bargauge",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "trading_bot_strategy_win_rate",
            "legendFormat": "{{strategy}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 0.5, "color": "yellow" },
                { "value": 0.65, "color": "green" }
              ]
            }
          }
        }
      },
      
      {
        "id": 3,
        "title": "Risk Metrics - VaR (Value at Risk)",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "trading_bot_var_parametric",
            "legendFormat": "Parametric VaR",
            "refId": "A"
          },
          {
            "expr": "trading_bot_var_historical",
            "legendFormat": "Historical VaR",
            "refId": "B"
          },
          {
            "expr": "trading_bot_var_monte_carlo",
            "legendFormat": "Monte Carlo VaR",
            "refId": "C"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.03, "color": "yellow" },
                { "value": 0.05, "color": "red" }
              ]
            }
          }
        }
      },
      
      {
        "id": 4,
        "title": "Kelly Criterion Position Sizing",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 4, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "trading_bot_kelly_adjusted_fraction",
            "legendFormat": "Optimal Position Size",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 0.5,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 0.01, "color": "yellow" },
                { "value": 0.05, "color": "green" },
                { "value": 0.15, "color": "yellow" },
                { "value": 0.3, "color": "red" }
              ]
            }
          }
        }
      },
      
      {
        "id": 5,
        "title": "Active Trades Timeline",
        "type": "table",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "trading_bot_trades_total",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "timestamp": "Time",
                "symbol": "Symbol",
                "action": "Action",
                "price": "Price",
                "quantity": "Quantity",
                "pnl": "PnL",
                "strategy": "Strategy"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{ "displayName": "Time", "desc": true }]
        }
      },
      
      {
        "id": 6,
        "title": "Drawdown Analysis",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "trading_bot_portfolio_drawdown",
            "legendFormat": "Current Drawdown",
            "refId": "A"
          },
          {
            "expr": "trading_bot_max_drawdown",
            "legendFormat": "Max Drawdown",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "Drawdown", "max": 0, "min": -0.3 },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [-0.15],
                "type": "lt"
              },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "last" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Drawdown Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      
      {
        "id": 7,
        "title": "Monte Carlo Simulation Results",
        "type": "heatmap",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "trading_bot_monte_carlo_distribution",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "cellGap": 2,
          "cellRadius": 0,
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "scheme",
            "reverse": false,
            "scale": "exponential",
            "scheme": "RdYlGn",
            "steps": 128
          },
          "exemplars": { "color": "rgba(255,0,255,0.7)" },
          "filterValues": { "le": 1e-9 },
          "legend": { "show": true },
          "rowsFrame": { "layout": "auto" },
          "tooltip": { "show": true, "yHistogram": false },
          "yAxis": { "axisPlacement": "left", "reverse": false }
        }
      },
      
      {
        "id": 8,
        "title": "System Health & Status",
        "type": "stat",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 4 },
        "targets": [
          {
            "expr": "trading_bot_health_status",
            "legendFormat": "Health",
            "refId": "A"
          },
          {
            "expr": "trading_bot_uptime_seconds",
            "legendFormat": "Uptime",
            "refId": "B"
          },
          {
            "expr": "trading_bot_total_trades",
            "legendFormat": "Total Trades",
            "refId": "C"
          },
          {
            "expr": "trading_bot_win_rate",
            "legendFormat": "Win Rate",
            "refId": "D"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": { "text": "Unhealthy", "color": "red" },
                  "1": { "text": "Degraded", "color": "yellow" },
                  "2": { "text": "Healthy", "color": "green" }
                }
              }
            ]
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Uptime" },
              "properties": [{ "id": "unit", "value": "s" }]
            },
            {
              "matcher": { "id": "byName", "options": "Win Rate" },
              "properties": [{ "id": "unit", "value": "percentunit" }]
            }
          ]
        }
      },
      
      {
        "id": 9,
        "title": "ML Confidence & Learning Progress",
        "type": "graph",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 4 },
        "targets": [
          {
            "expr": "trading_bot_ml_confidence_threshold",
            "legendFormat": "Confidence Threshold",
            "refId": "A"
          },
          {
            "expr": "trading_bot_ml_average_confidence",
            "legendFormat": "Avg Confidence",
            "refId": "B"
          },
          {
            "expr": "trading_bot_ml_exploration_rate",
            "legendFormat": "Exploration Rate",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "Confidence / Rate" },
          { "format": "short" }
        ]
      }
    ],
    
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(trading_bot_portfolio_total_value, instance)",
          "refresh": 1,
          "multi": false,
          "includeAll": false
        },
        {
          "name": "strategy",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(trading_bot_strategy_win_rate, strategy)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"HighDrawdown\"}",
          "iconColor": "red",
          "name": "Risk Alerts",
          "tagKeys": "alertname,severity"
        },
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "trading_bot_trades_total",
          "iconColor": "blue",
          "name": "Trade Executions",
          "tagKeys": "action,strategy"
        }
      ]
    },
    
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
