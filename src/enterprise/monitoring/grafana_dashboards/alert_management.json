{
  "dashboard": {
    "id": null,
    "title": "Trading Bot - Alert Management",
    "tags": ["trading", "alerts", "monitoring", "alertmanager"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Alert Status Overview",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Critical Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "alerts_active{severity=\"critical\"}",
            "legendFormat": "Critical",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 1
        }
      },
      {
        "id": 3,
        "title": "Warning Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "alerts_active{severity=\"warning\"}",
            "legendFormat": "Warning",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 1
        }
      },
      {
        "id": 4,
        "title": "Info Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "alerts_active{severity=\"info\"}",
            "legendFormat": "Info",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "blue",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 1
        }
      },
      {
        "id": 5,
        "title": "Alert Firing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alerts_fired_total[5m]) * 60",
            "legendFormat": "Alerts fired/min - {{severity}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Alerts per minute",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 6,
        "title": "Alert Resolution Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alerts_resolved_total[5m]) * 60",
            "legendFormat": "Alerts resolved/min - {{severity}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Alerts per minute",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 9
        }
      },
      {
        "id": 7,
        "title": "Alert Details",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 17
        }
      },
      {
        "id": 8,
        "title": "Active Alerts by Rule",
        "type": "table",
        "targets": [
          {
            "expr": "alerts_active",
            "legendFormat": "{{rule}} ({{severity}})",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "rule": "Alert Rule",
                "severity": "Severity",
                "Value": "Count"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 18
        }
      },
      {
        "id": 9,
        "title": "Alert History",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(alerts_fired_total[1h])",
            "legendFormat": "Fired - {{rule}} ({{severity}})",
            "refId": "A"
          },
          {
            "expr": "increase(alerts_resolved_total[1h])",
            "legendFormat": "Resolved - {{rule}} ({{severity}})",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 18
        }
      },
      {
        "id": 10,
        "title": "System Health Indicators",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 26
        }
      },
      {
        "id": 11,
        "title": "Memory Alert Threshold",
        "type": "graph",
        "targets": [
          {
            "expr": "system_memory_usage_bytes / system_memory_total_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ],
        "thresholds": [
          {
            "value": 90,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "fillColor": "rgba(234, 112, 112, 0.12)",
            "lineColor": "rgba(237, 129, 40, 0.60)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 27
        }
      },
      {
        "id": 12,
        "title": "Market Data Uptime Threshold",
        "type": "graph",
        "targets": [
          {
            "expr": "market_data_uptime_percent",
            "legendFormat": "Uptime % - {{exchange}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ],
        "thresholds": [
          {
            "value": 95,
            "colorMode": "critical",
            "op": "lt",
            "fill": true,
            "fillColor": "rgba(234, 112, 112, 0.12)",
            "lineColor": "rgba(237, 129, 40, 0.60)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 27
        }
      },
      {
        "id": 13,
        "title": "Error Rate Threshold",
        "type": "graph",
        "targets": [
          {
            "expr": "orchestrator_error_rate_percent",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "fillColor": "rgba(234, 112, 112, 0.12)",
            "lineColor": "rgba(237, 129, 40, 0.60)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 35
        }
      },
      {
        "id": 14,
        "title": "Signal Latency Threshold",
        "type": "graph",
        "targets": [
          {
            "expr": "trading_signal_latency_ms",
            "legendFormat": "Signal Latency (ms)",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Milliseconds",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "thresholds": [
          {
            "value": 1000,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "fillColor": "rgba(234, 112, 112, 0.12)",
            "lineColor": "rgba(237, 129, 40, 0.60)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 35
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "severity",
          "type": "query",
          "query": "label_values(alerts_active, severity)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        },
        {
          "name": "rule",
          "type": "query",
          "query": "label_values(alerts_active, rule)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Critical Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", severity=\"critical\"}",
          "iconColor": "red",
          "titleFormat": "üö® {{alertname}}",
          "textFormat": "{{description}} - Value: {{value}}"
        },
        {
          "name": "Warning Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", severity=\"warning\"}",
          "iconColor": "orange",
          "titleFormat": "‚ö†Ô∏è {{alertname}}",
          "textFormat": "{{description}} - Value: {{value}}"
        }
      ]
    }
  }
}
