# =================================================================
# CORE SERVER CONFIGURATION
# =================================================================
NODE_ENV=development
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0
API_VERSION=1.0.0
LOG_LEVEL=info

# =================================================================
# SECURITY & AUTHENTICATION
# =================================================================
JWT_SECRET=enterprise-trading-bot-super-secret-key-change-in-production
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ENABLE_CSRF=false

# =================================================================
# CONTACT & LICENSING INFORMATION
# =================================================================
API_CONTACT_EMAIL=api@trading-bot.enterprise
API_CONTACT_URL=https://trading-bot.enterprise/support
API_LICENSE_NAME=Enterprise License
API_LICENSE_URL=https://trading-bot.enterprise/license

# =================================================================
# FEATURE TOGGLES
# =================================================================
WEBSOCKET_ENABLED=true
DOCS_ENABLED=true
OPENAPI_ENABLED=true
SWAGGER_ENABLED=true
STATUS_PAGE_ENABLED=true

# =================================================================
# SERVER PERFORMANCE SETTINGS
# =================================================================
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
MAX_HEADER_SIZE=16384
GRACEFUL_SHUTDOWN_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000

# =================================================================
# CLUSTERING CONFIGURATION
# =================================================================
ENABLE_CLUSTER=false
CLUSTER_WORKERS=0

# =================================================================
# WEBSOCKET CONFIGURATION
# =================================================================
WS_MAX_CONNECTIONS=10000
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
WS_RATE_LIMIT_MSG_PER_SEC=10
WS_RATE_LIMIT_BURST=50
WS_RATE_LIMIT_WINDOW=1000
WS_METRICS_INTERVAL=30000
WS_STATS_INTERVAL=10000

# =================================================================
# CACHING & PERFORMANCE
# =================================================================
CACHE_TTL=300000
CACHE_MAX_SIZE=10000
PROXY_TIMEOUT=30000
PROXY_RETRIES=3
PROXY_HEALTH_CHECK_INTERVAL=30000

# =================================================================
# AUDITING & COMPLIANCE
# =================================================================
AUDIT_RETENTION_DAYS=30

# =================================================================
# TRADING BOT INTEGRATION
# =================================================================
MODE=simulation
ENABLE_ML=true
ENABLE_REAL_TRADING=false
TRADING_INTERVAL=30000

# =================================================================
# PROMETHEUS & MONITORING
# =================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_HOST=0.0.0.0
ENABLE_PROMETHEUS_METRICS=true

# =================================================================
# DATABASE & REDIS CONFIGURATION (Optional)
