# MICROSOFT_CLIENT_SECRET=

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================
DEBUG=turbo-bot:*
VERBOSE_LOGGING=false
ENABLE_DEBUG_ENDPOINTS=false

