{
  "name": "enterprise-api-gateway",
  "version": "1.0.0",
  "description": "Enterprise-grade API Gateway for Autonomous Trading Bot with complete authentication, WebSocket support, and advanced monitoring capabilities",
  "main": "gateway_bootstrap.js",
  "scripts": {
    "start": "node dist/enterprise/api-gateway/gateway_bootstrap.js",
    "start:dev": "ts-node gateway_bootstrap.ts",
    "start:debug": "node --inspect dist/enterprise/api-gateway/gateway_bootstrap.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t enterprise-api-gateway .",
    "docker:run": "docker run -p 3000:3000 enterprise-api-gateway",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "api-gateway",
    "enterprise",
    "trading-bot",
    "authentication",
    "websocket",
    "monitoring",
    "microservices",
    "rate-limiting",
    "jwt",
    "oauth2",
    "prometheus",
    "swagger",
    "openapi"
  ],
  "author": "Enterprise Trading Bot Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "socket.io": "^4.7.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "prom-client": "^15.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "redis": "^4.6.10",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enterprise/turbo-bot.git"
  },
  "bugs": {
    "url": "https://github.com/enterprise/turbo-bot/issues"
  },
  "homepage": "https://github.com/enterprise/turbo-bot#readme",
  "config": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "exec": "ts-node gateway_bootstrap.ts"
  }
}