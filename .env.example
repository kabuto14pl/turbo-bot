# ============================================================================
# üåê TRADING MODE CONFIGURATION
# ============================================================================
# MODE options:
#   - simulation: Mock data, simulated execution (DEFAULT for testing)
#   - paper_trading: LIVE OKX data, simulated execution (PRE-PRODUCTION)
#   - live: LIVE OKX data, REAL execution (PRODUCTION - USE WITH CAUTION!)
MODE=paper_trading

# ============================================================================
# üîê OKX API CREDENTIALS (Required for paper_trading and live modes)
# ============================================================================
# Get your API keys from: https://www.okx.com/account/my-api
# IMPORTANT: Enable ONLY trading permissions (NO withdrawals!)
OKX_API_KEY=your-api-key-here
OKX_SECRET_KEY=your-secret-key-here
OKX_PASSPHRASE=your-passphrase-here

# ============================================================================
# ü§ñ BOT CONFIGURATION
# ============================================================================
ENABLE_ML=true
ENABLE_REAL_TRADING=false    # Must be false for paper_trading mode
TRADING_INTERVAL=30000        # 30 seconds between cycles
LOG_LEVEL=info

# Trading Parameters
TRADING_SYMBOL=BTC-USDT      # OKX format with hyphen
TIMEFRAME=15m                 # 1m, 5m, 15m, 1H, 4H, 1D
INITIAL_CAPITAL=10000         # USD starting capital (paper trading)

# Risk Management
RISK_PER_TRADE=0.02          # 2% risk per trade
MAX_DRAWDOWN=0.15            # 15% maximum drawdown
MAX_CONSECUTIVE_LOSSES=5     # Circuit breaker trips after 5 losses

# ============================================================================
# üåê PAPER TRADING SETTINGS
# ============================================================================
PAPER_TRADING=true           # Enable paper trading mode
ENABLE_WEBSOCKET=false       # WebSocket disabled - use REST API polling

# ============================================================================
# üìä MONITORING
# ============================================================================
HEALTH_CHECK_PORT=3001
PROMETHEUS_PORT=9091
DISABLE_PRODUCTION_DEPLOYMENT=true  # Disable for paper trading - no cluster needed
